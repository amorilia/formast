[tox]
envlist=py26,py27,py30,py31,py32,py33
[testenv]
setenv=LD_LIBRARY_PATH=@formast_BINARY_DIR@/src/formast/lib
deps=
    nose
commands=
    # running in current folder fails due to missing extension module
    # so pass "-w test" to chdir to test folder before running tests
    nosetests --exe -w test
